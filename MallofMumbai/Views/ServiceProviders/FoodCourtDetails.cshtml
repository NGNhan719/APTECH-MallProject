@model MumbaiMallLibrary.ServiceProvider

@{
    ViewBag.Title = "FoodCourtDetails";
}

<!-- BUSINESS INFORMATION -->
<div id="business">
    <div class="business container">
        <div class="business-main">
            <div class="pathbar">
                <div class="path-info">
                    <div class="path-root">
                        @Html.ActionLink("Mumbai Mall", "Index", "Home")
                    </div>
                    <div class="path-page">
                        @Html.ActionLink("Dining", "FoodCourt", "ServiceProviders")
                    </div>
                    <div class="path-page">
                        <a href="#">@Model.Name</a>
                    </div>
                </div>
            </div>
            <div class="previous-page">
                <div class="previous-arrow">
                    <button onclick="location.href='@Url.Action("Shop", "ServiceProviders")'"><i class="fas fa-long-arrow-alt-left fa-2x"></i></button>
                </div>
            </div>
            <div class="business-info">
                <div class="business-intro">
                    <div class="biz-pic-container">
                        <img src="@Url.Content("~/Content/image/" + @Model.Avatar)" alt="@Model.Name">
                    </div>
                    <div class="biz-paragraph">
                        <div class="biz-paragraph-main">
                            <h3 class="biz-name">@Model.Name</h3>
                            <div class="biz-location location">
                                <button>View on Map</button>
                                <p class="biz-map">Level @Model.Floor</p>
                            </div>
                            <p class="biz-opening">Monday-Sunday 11:00am-7:00pm</p>
                            <p class="biz-tel">(646) 954-3100</p>
                            <div class="biz-summary">
                                <p>@Model.Description</p>
                            </div>
                        </div>
                        <div class="biz-category">
                            <div class="category-wrapper">
                                <div class="category-text">
                                    <p>Categories:</p>
                                </div>
                                <div class="category-all">
                                    @foreach (var service in Model.Services)
                                    {
                                        <a href="#">@service.ServiceCategory.CategoryName</a>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="biz-social">
                            <div class="social-wrapper">
                                <p>Share</p>
                                <div class="social-icon">
                                    <div class="icon">
                                        <a href="">
                                            <i class="fab fa-facebook-square fa-2x"></i>
                                        </a>
                                    </div>
                                    <div class="icon">
                                        <a href="#">
                                            <i class="fab fa-twitter-square fa-2x"></i>
                                        </a>
                                    </div>
                                    <div class="icon">
                                        <a href="#">
                                            <i class="fab fa-pinterest-square fa-2x"></i>
                                        </a>
                                    </div>
                                    <div class="icon">
                                        <a href="#">
                                            <i class="fas fa-envelope-square fa-2x"></i>
                                        </a>
                                    </div>
                                    <div class="icon">
                                        <a href="#">
                                            <i class="fas fa-share-alt-square fa-2x"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BUSINESS INFORMATION END -->
<!-- Discovery SECTION -->
<div id="d-region">
    <div class="d-region">
        <div class="d-region-header">
            <div class="d-region-header-content">
                <h3>Discover the magnificent architect of Mumbai</h3>
                <p>Enjoy unique shopping, dining and experiences when exploring. Stay connected and follow <span><a href="#">@@MumbaiMall</a></span> for the latest updates.</p>
            </div>
            <div class="d-region-header-social">
                <div class="social-item">
                    <p>Follow us:</p>
                    <div class="icon">
                        <a href="#"><img src="@Url.Content("~/Content/image/sm-icon/instagram_black.svg")"></a>
                    </div>
                    <div class="icon">
                        <a href="#"><img src="@Url.Content("~/Content/image/sm-icon/facebook_black.svg")"></a>
