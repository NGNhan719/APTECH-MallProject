<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Mall of Mumbai</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- HEADER SECTION BEGIN -->
    <div id="header">
        <div class="header container">
            <div class="navbar">
                <div class="logo">
                    <div class="logo-img">
                        <a href="#">
                            <img src="@Url.Content("~/Content/image/logo-1.png")">
                        </a>
                    </div>
                </div>
                <div class="nav-list">
                    <div class="hamburger">
                        <div class="bar"></div>
                    </div>
                    <ul>
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Shopping", "Shop", "ServiceProviders")</li>
                        <li>@Html.ActionLink("Dining", "FoodCourt", "ServiceProviders")</li>
                        <li>@Html.ActionLink("Entertainment", "Showtime", "ServiceProviders")</li>
                        <li><a href="#">Contact</a></li>
                        <li><a href="#">Feedback</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- HEADER SECTION END -->
    @RenderBody()
    <div id="footer">
        <div class="footer">
            <p>Copyright 2021 Related Companies. All Rights Reserved.</p>
        </div>
    </div>
    <!-- FOOTER SECTION END -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
