@model IEnumerable<MumbaiMallLibrary.CreditCard>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<main>
    <div class="container-fluid">
        <h1 class="mt-4">Customer Credit Cards</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Dashboard</a></li>
            <li class="breadcrumb-item active">Movies</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>

            </div>
            <div class="card-body">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Card Owner</th>
                                <th>Card Number</th>
                                <th>Card Type</th>
                                <th>Expired Date</th>
                                <th></th>
                            </tr>

                        </thead>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Card Owner</th>
                                <th>Card Number</th>
                                <th>Card Type</th>
                                <th>Expired Date</th>
                                <th></th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.CardOwner</td>
                                    <td>@item.CardNumber</td>
                                    <td>@item.CardType</td>
                                    <td>@Convert.ToDateTime(item.ExpiredDate).ToString("dd/mm/yyyy")</td>
                                    <td class="d-flex align-text-center flex-nowrap align-items-center">
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>